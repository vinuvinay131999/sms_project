

<div class="container">

<h1 align="center"><strong>Student Show Page</strong></h1></br>


<table class="table" >
  <thead>
  <tr class="table-dark"></br>
    <th scope="col">ID</th>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Email</th>
<!--    <th scope="col", colspan="3"></th>-->
  <th colspan="3" >Actions</th>
  </tr>
  </thead>

<tbody>
<%@students.each do |student| %>

  <td><%=student.id %></td>
  <td><%=student.first_name %></td>
  <td><%=student.last_name %></td>
  <td><%=student.email%></td>
<td>

  <%=link_to 'Show',student_path(student),class: "btn btn-primary" %>

    <%=link_to 'Edit',edit_student_path(student),class: "btn btn-warning" %>

  <%=link_to 'Delete' ,student, method: :delete,  data: {confirm: "Are you sure?"},class: "btn btn-danger"%>

</td>
     </tr>

<%end %>
</tbody>
  </table></br>
